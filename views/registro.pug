extends layout

block main
    .registro-container
        h1 Registro de Usuario
        p Completa el siguiente formulario para registrarte.

        form(action="/registro", method="POST" class="form-registro")

            .form-group
                label(for="cod_usuario") Código de Usuario:
                input(type="number" id="cod_usuario" name="cod_usuario" required)

            .form-group
                label(for="nombre_usuario") Nombre:
                input(type="text" id="nombre_usuario" name="nombre_usuario" required)

            .form-group
                label(for="apellido_usuario") Apellido:
                input(type="text" id="apellido_usuario" name="apellido_usuario" required)

            .form-group
                label(for="documento_usuario") Documento:
                input(type="text" id="documento_usuario" name="documento_usuario" required)

            .form-group
                label(for="cod_tipousuario") Tipo de Usuario:
                input(type="number" id="cod_tipousuario" name="cod_tipousuario" required)

            .form-group
                label(for="correo_usuario") Correo Electrónico:
                input(type="email" id="correo_usuario" name="correo_usuario" required)

            .form-group
                label(for="celular") Celular:
                input(type="text" id="celular" name="celular" required)

            .form-group
                label(for="clave") Contraseña:
                input(type="password" id="clave" name="clave" required)

            button(type="submit" class="btn") Registrarse

        a.volver(href="/") Volver al Inicio
