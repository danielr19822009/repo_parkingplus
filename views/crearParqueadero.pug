extends layout

block main
    .registro-container
        h1 Crear Parqueadero
        p Ingresa los datos para registrar un nuevo parqueadero.

        form(action="/parqueaderos/crear" method="POST" class="form-registro")
            .form-group
                label(for="nombre") Nombre del Parqueadero
                input(type="text" name="nombre" placeholder="Ej: Parking Central" required)

            .form-group
                label(for="direccion") Direcci√≥n
                input(type="text" name="direccion" placeholder="Ej: Calle 10 #25-30" required)

            .form-group
                label(for="capacidad") Capacidad de Espacios
                input(type="number" name="capacidad" min="1" required)

            .form-group
                label(for="precioHora") Precio por Hora ($)
                input(type="number" name="precioHora" min="1000" required)

            button.btn(type="submit") Guardar Parqueadero

        a.volver(href="/menu") Volver al Panel
